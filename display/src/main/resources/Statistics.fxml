<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane fx:id="statisticsPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wy.display.statistics.StatisticsController">
   <children>
      <VBox fx:id="vBox" spacing="20.0">
         <children>
          <MenuBar fx:id="menuBar" VBox.vgrow="ALWAYS">
            <menus>
              <Menu fx:id="statisticsMenu" mnemonicParsing="false" text="Statistics">
                <items>
                  <MenuItem fx:id="textMenuItem" mnemonicParsing="false" style="" text="Data Overview" />
                </items>
              </Menu>
            <Menu fx:id="chartMeun" mnemonicParsing="false" text="Hit Map">
              <items>
                        <MenuItem fx:id="boardHitMap" mnemonicParsing="false" text="Boad Hitmap" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="channelHitMap" mnemonicParsing="false" text="Channel Hitmap" />
              </items>
            </Menu>
            <Menu fx:id="energyMap" mnemonicParsing="false" text="Energy Spectrum">
              <items>
                        <MenuItem fx:id="frequency" mnemonicParsing="false" text="Frequency Chart" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="energyLoss" mnemonicParsing="false" text="Energy Loss Chart" />
              </items>
            </Menu>
            </menus>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
          </MenuBar>
            <HBox fx:id="hBox" alignment="CENTER" prefHeight="488.0" prefWidth="588.0" spacing="20.0" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin></HBox>
         </children>
      </VBox>
   </children>
</Pane>
